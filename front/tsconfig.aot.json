{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "noImplicitAny": true,
        "noStrictGenericChecks" : true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "./node_modules/@types/"
        ]
    },

    "files": [
        "src/App/app.module.ts",
        "src/main.ts"
    ],

    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],

    "angularCompilerOptions": {
        "skipMetadataEmit" : true
    }
}
